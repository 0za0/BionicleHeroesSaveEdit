<UserControl x:Class="BionicleHeroesSaveEditor.Controls.ToaConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BionicleHeroesSaveEditor.Controls"
             >
    <StackPanel >
        <Image x:Name="ToaImage"  Source="/Images/ToaHeads/hahli.png" Stretch="Uniform" Height="100" ></Image>
        <Label Content="Health Upgrades (1-10)" Height="26" Margin="0 0 0 0" />
        <TextBox x:Name="ToaHealthTextBox" Height="20"  Margin="25 0 25 0"/>

        <Label Content="Ability Upgrades (1-10)" Height="25" Margin="0 0 0 0" />
        <TextBox x:Name="ToaAbilityTextBox" Height="20"  Margin="25 0 25 0"/>

        <Label  Content="Weapon Upgrades (1-10)" Height="25" Margin="0 0 0 0" />
        <TextBox x:Name="ToaWeaponUpgradesTextBox" Height="20"  Margin="25 0 25 0"/>

        <Label Content="Killed Enemies" Height="25" Margin="0 0 0 0" />
        <TextBox x:Name="ToaEnemyKillCountTextBox" Height="20"  Margin="25 0 25 0" IsEnabled="False"/>
    </StackPanel>
</UserControl>
